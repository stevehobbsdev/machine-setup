
# Exports
export ELKDANGER=~/.elkdanger
export EDITOR=vim

# Git aliases
alias gfp="git fetch --prune"
alias gdb="git branch --merged | egrep -v \"(^\*|master|dev|main)\" | xargs git branch -d"
alias gu="git fetch --prune && git merge && gdb"
alias gai="git add -i"

mktouch() { 
  mkdir -p $(dirname $1) && touch $1; 
}

npm-scripts() {
  if ! command -v jq &> /dev/null
  then
      echo "Must have jq installed (brew install jq)"
      return
  fi

  [ -f package.json ] && cat package.json | jq {'scripts'}
}
